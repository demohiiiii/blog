---
import { Image } from "astro:assets";
import type { PostData } from "@interfaces/data";
import Card from "@components/temple/Card.astro";
import { randomImg } from "@/utils/blogUtils";
const { title, image, random, imageSize, } = Astro.props as PostData;
---

<Card>
  <div id="image-container">
    {(image || random) && <Image src={image || randomImg(title, imageSize)} width="1920" height="1080" alt={title} loading="eager" />}
  </div>
  <div class="p-4 sm:p-6">
    <slot />
  </div>
</Card>
